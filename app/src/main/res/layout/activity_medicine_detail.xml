<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/medicine_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MedicineDetailActivity">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_scroll_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_backward"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"
                app:layout_constraintHeight_percent="0.07"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/btn_back"
                    android:layout_width="24dp"
                    android:layout_height="22dp"
                    android:layout_marginStart="20dp"
                    android:src="@drawable/btn_back"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tv_setting"
                    style="@style/H2_SB16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="약물검색"
                    android:textColor="@color/black"
                    app:layout_constraintBottom_toBottomOf="@id/btn_back"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <ImageView
                    android:id="@+id/btn_close"
                    android:layout_width="24dp"
                    android:layout_height="22dp"
                    android:layout_marginEnd="20dp"
                    android:src="@drawable/ic_close"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_medicine_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:paddingBottom="30dp"
                app:layout_constraintTop_toBottomOf="@id/layout_backward">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_medicine"
                    android:layout_width="match_parent"
                    android:layout_height="174dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="0dp"
                    app:cardPreventCornerOverlap="true"
                    app:cardUseCompatPadding="false"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:id="@+id/img_medicine"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/img_default_large" />

                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/tv_medicine_type"
                    style="@style/H2_MD16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/shape_round_box_4dp"
                    android:backgroundTint="@color/gray_3"
                    android:paddingStart="4dp"
                    android:paddingTop="2dp"
                    android:paddingEnd="4dp"
                    android:paddingBottom="2dp"
                    android:textColor="@color/gray_1"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/cv_medicine"
                    tools:text="진통제" />

                <TextView
                    android:id="@+id/tv_medicine_name"
                    style="@style/T1_B22"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:ellipsize="end"
                    android:ems="20"
                    android:maxLines="2"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_medicine_type"
                    tools:text="오그맥스정375밀리그램" />

                <TextView
                    android:id="@+id/tv_medicine_entp"
                    style="@style/H2_MD16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:textColor="@color/gray_1"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_medicine_name"
                    tools:text="동광제약" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <LinearLayout
                android:id="@+id/blank1"
                android:layout_width="match_parent"
                android:layout_height="6dp"
                android:background="@color/gray_4"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@id/layout_medicine_info" />

            <!-- 충돌 정보 섹션 -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_conflict_section"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/main_pink_2"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:paddingHorizontal="20dp"
                android:paddingTop="30dp"
                android:paddingBottom="30dp"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/blank1">

                <TextView
                    android:id="@+id/tv_conflict_pill"
                    style="@style/H1_B18"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="성분 충돌 발견"
                    android:textColor="@color/black"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tv_conflict_pill_description"
                    style="@style/B2_RG14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text="복용 중인 약물과 성분 충돌이 확인되었어요.\n전문가 상담이나 약사와의 확인을 권장드려요."
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_conflict_pill" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/layout_contraindication"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/bg_conflict_white"
                    android:clipChildren="false"
                    android:clipToPadding="false"
                    android:paddingHorizontal="12dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_conflict_pill_description">

                    <TextView
                        android:id="@+id/tv_contraindication"
                        style="@style/H2_MD16"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="@string/medicine_conflict_contraindication"
                        android:textColor="@color/main_pink_1"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_contraindication"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:nestedScrollingEnabled="false"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tv_contraindication" />

                    <FrameLayout
                        android:id="@+id/layout_contraindication_click_area"
                        android:layout_width="24dp"
                        android:layout_height="30dp"
                        android:clickable="true"
                        android:focusable="true"
                        app:layout_constraintBottom_toBottomOf="@id/tv_contraindication"
                        app:layout_constraintStart_toEndOf="@id/tv_contraindication"
                        app:layout_constraintTop_toTopOf="@id/tv_contraindication">

                        <ImageView
                            android:id="@+id/iv_contraindication_info"
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_link" />
                    </FrameLayout>

                    <ImageView
                        android:id="@+id/iv_contraindication_tooltip"
                        android:layout_width="220dp"
                        android:layout_height="78dp"
                        android:layout_marginTop="11dp"
                        android:src="@drawable/img_tooltip_contraindication"
                        app:layout_constraintStart_toEndOf="@+id/layout_contraindication_click_area"
                        app:layout_constraintTop_toTopOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <!-- 효능군 중복 -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/layout_efficiency_overlap"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/bg_conflict_white"
                    android:clipChildren="false"
                    android:clipToPadding="false"
                    android:paddingHorizontal="12dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/layout_contraindication">

                    <TextView
                        android:id="@+id/tv_efficiency_overlap"
                        style="@style/H2_MD16"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="@string/medicine_conflict_efficiency_overlap"
                        android:textColor="@color/main_pink_1"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_efficiency_overlap"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:nestedScrollingEnabled="false"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tv_efficiency_overlap" />

                    <FrameLayout
                        android:id="@+id/layout_efficiency_overlap_click_area"
                        android:layout_width="24dp"
                        android:layout_height="30dp"
                        android:clickable="true"
                        android:focusable="true"
                        app:layout_constraintBottom_toBottomOf="@id/tv_efficiency_overlap"
                        app:layout_constraintStart_toEndOf="@id/tv_efficiency_overlap"
                        app:layout_constraintTop_toTopOf="@id/tv_efficiency_overlap">

                        <ImageView
                            android:id="@+id/iv_efficiency_overlap_info"
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_link" />
                    </FrameLayout>

                    <ImageView
                        android:id="@+id/iv_efficiency_overlap_tooltip"
                        android:layout_width="210dp"
                        android:layout_height="116dp"
                        android:layout_marginTop="11dp"
                        android:src="@drawable/img_tooltip_efficiency_overlap"
                        app:layout_constraintStart_toEndOf="@+id/layout_efficiency_overlap_click_area"
                        app:layout_constraintTop_toTopOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_medicine_precautions_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="20dp"
                android:paddingTop="30dp"
                android:paddingEnd="20dp"
                android:paddingBottom="30dp"
                app:layout_constraintTop_toBottomOf="@id/layout_conflict_section">

                <include layout="@layout/view_progress_indicator" />

                <TextView
                    android:id="@+id/tv_medicine_precautions_title"
                    style="@style/H1_SB18"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="성분 주의"
                    android:textColor="@color/black"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/btn_faq2"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_faq"
                    app:layout_constraintStart_toEndOf="@id/tv_medicine_precautions_title"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/layout_precautions_tag"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_medicine_precautions_title"
                    app:layout_constraintVertical_chainStyle="spread_inside">

                    <TextView
                        android:id="@+id/tag_1"
                        style="@style/B2_RG14"
                        android:layout_width="104dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/btn_basic"
                        android:backgroundTint="@color/gray_3"
                        android:paddingTop="6dp"
                        android:paddingBottom="6dp"
                        android:text="임부금기"
                        android:textAlignment="center"
                        android:textColor="@color/gray_1"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tag_2"
                        style="@style/B2_RG14"
                        android:layout_width="104dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/btn_basic"
                        android:backgroundTint="@color/gray_3"
                        android:paddingTop="6dp"
                        android:paddingBottom="6dp"
                        android:text="특정연령대 금기"
                        android:textAlignment="center"
                        android:textColor="@color/gray_1"
                        app:layout_constraintEnd_toStartOf="@id/tag_3"
                        app:layout_constraintStart_toEndOf="@id/tag_1"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tag_3"
                        style="@style/B2_RG14"
                        android:layout_width="104dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/btn_basic"
                        android:backgroundTint="@color/gray_3"
                        android:paddingTop="6dp"
                        android:paddingBottom="6dp"
                        android:text="노인주의"
                        android:textAlignment="center"
                        android:textColor="@color/gray_1"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tag_4"
                        style="@style/B2_RG14"
                        android:layout_width="104dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:background="@drawable/btn_basic"
                        android:backgroundTint="@color/gray_3"
                        android:paddingTop="6dp"
                        android:paddingBottom="6dp"
                        android:text="용량주의"
                        android:textAlignment="center"
                        android:textColor="@color/gray_1"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tag_1" />

                    <TextView
                        android:id="@+id/tag_5"
                        style="@style/B2_RG14"
                        android:layout_width="104dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:background="@drawable/btn_basic"
                        android:backgroundTint="@color/gray_3"
                        android:paddingTop="6dp"
                        android:paddingBottom="6dp"
                        android:text="첨가제 주의"
                        android:textAlignment="center"
                        android:textColor="@color/gray_1"
                        app:layout_constraintEnd_toStartOf="@id/tag_3"
                        app:layout_constraintStart_toEndOf="@id/tag_1"
                        app:layout_constraintTop_toBottomOf="@id/tag_2" />

                    <TextView
                        android:id="@+id/tag_6"
                        style="@style/B2_RG14"
                        android:layout_width="104dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:background="@drawable/btn_basic"
                        android:backgroundTint="@color/gray_3"
                        android:paddingTop="6dp"
                        android:paddingBottom="6dp"
                        android:text="투여기간 주의"
                        android:textAlignment="center"
                        android:textColor="@color/gray_1"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tag_3" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <LinearLayout
                android:id="@+id/blank2"
                android:layout_width="match_parent"
                android:layout_height="6dp"
                android:background="@color/gray_4"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@id/layout_medicine_precautions_info" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_detail_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="30dp"
                android:paddingBottom="30dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/blank2">

                <TextView
                    android:id="@+id/tv_detail_title"
                    style="@style/H1_SB18"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:paddingBottom="1dp"
                    android:text="상세정보"
                    android:textColor="@color/black"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/layout_tv_userMethod"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_detail_title">

                    <TextView
                        android:id="@+id/tv_userMethod"
                        style="@style/H2_SB16"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="16dp"
                        android:text="사용법"
                        android:textColor="@color/black"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:id="@+id/btn_dropdown1"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginEnd="20dp"
                        android:src="@drawable/btn_dropdown_down"
                        app:layout_constraintBottom_toBottomOf="@id/tv_userMethod"
                        app:layout_constraintEnd_toEndOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <View
                    android:id="@+id/line1"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/gray_4"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/layout_tv_userMethod" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/layout_userMethod_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/gray_4"
                    android:paddingStart="34dp"
                    android:paddingTop="20dp"
                    android:paddingEnd="34dp"
                    android:paddingBottom="20dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/layout_tv_userMethod">

                    <TextView
                        android:id="@+id/tv_userMethod_info"
                        style="@style/B2_RG14"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:text="사용법에 대한 상세 정보" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/layout_tv_efficacy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/layout_userMethod_info">

                    <TextView
                        android:id="@+id/tv_efficacy"
                        style="@style/H2_SB16"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="16dp"
                        android:text="효능"
                        android:textColor="@color/black"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:id="@+id/btn_dropdown2"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginEnd="20dp"
                        android:src="@drawable/btn_dropdown_up"
                        app:layout_constraintBottom_toBottomOf="@id/tv_efficacy"
                        app:layout_constraintEnd_toEndOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <View
                    android:id="@+id/line2"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/gray_4"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/layout_tv_efficacy" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/layout_efficacy_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/gray_4"
                    android:paddingStart="34dp"
                    android:paddingTop="20dp"
                    android:paddingEnd="34dp"
                    android:paddingBottom="20dp"
                    android:visibility="gone"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/layout_tv_efficacy">

                    <TextView
                        android:id="@+id/tv_efficacy_info"
                        style="@style/B2_RG14"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:text="효능에 대한 상세 정보" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/layout_tv_precautions"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/layout_efficacy_info">

                    <TextView
                        android:id="@+id/tv_precautions"
                        style="@style/H2_SB16"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="16dp"
                        android:text="주의사항"
                        android:textColor="@color/black"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:id="@+id/btn_dropdown3"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginEnd="20dp"
