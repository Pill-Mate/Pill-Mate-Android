<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        android:layout_marginStart="20dp"
        android:text="@string/select_times_title"
        style="@style/T2_B20"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
        android:id="@+id/ll_time_buttons"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="28dp"
        android:layout_marginHorizontal="20dp"
        app:layout_constraintTop_toBottomOf="@id/tv_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginVertical="8dp"
            android:layout_gravity="center_vertical">

            <TextView
                android:id="@+id/tv_empty"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:text="@string/time_empty"
                style="@style/H2_SB16"
                android:textColor="@color/black" />

            <ImageView
                android:id="@+id/iv_empty_check"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_btn_unselect"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginVertical="8dp"
            android:layout_gravity="center_vertical">

            <TextView
                android:id="@+id/tv_morning"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:text="@string/time_morning"
                style="@style/H2_SB16"
                android:textColor="@color/black" />

            <ImageView
                android:id="@+id/iv_morning_check"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_btn_unselect"
                android:contentDescription="@string/time_morning" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginVertical="8dp"
            android:layout_gravity="center_vertical">

            <TextView
                android:id="@+id/tv_lunch"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:text="@string/time_lunch"
                style="@style/H2_SB16"
                android:textColor="@color/black" />

            <ImageView
                android:id="@+id/iv_lunch_check"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_btn_unselect"
                android:contentDescription="@string/time_lunch" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginVertical="8dp"
            android:layout_gravity="center_vertical">

            <TextView
                android:id="@+id/tv_dinner"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:text="@string/time_dinner"
                style="@style/H2_SB16"
                android:textColor="@color/black" />

            <ImageView
                android:id="@+id/iv_dinner_check"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_btn_unselect"
                android:contentDescription="@string/time_dinner" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginVertical="8dp"
            android:layout_gravity="center_vertical">

            <TextView
                android:id="@+id/tv_before_sleep"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:text="@string/time_before_sleep"
                style="@style/H2_SB16"
                android:textColor="@color/black" />

            <ImageView
                android:id="@+id/iv_before_sleep_check"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_btn_unselect"
                android:contentDescription="@string/time_before_sleep" />
        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/btn_confirm"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginTop="28dp"
        android:layout_marginBottom="26dp"
        android:layout_marginHorizontal="20dp"
        android:text="@string/select_times_confirm"
        style="@style/ButtonStyle1"
        android:enabled="false"
        app:layout_constraintTop_toBottomOf="@id/ll_time_buttons"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>