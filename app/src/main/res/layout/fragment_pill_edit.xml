<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".pilledit.view.PillEditFragment">

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tab_pill_edit"
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="19dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tabIndicatorColor="@color/black"
        app:tabPaddingBottom="10dp"
        app:tabRippleColor="@color/gray_4"
        app:tabSelectedTextColor="@color/black"
        app:tabTextAppearance="@style/H2_SB16"
        app:tabTextColor="@color/gray_2" />

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/vp_pill_edit"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/tab_pill_edit"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="78dp"
        app:adSize="BANNER"
        app:adUnitId="ca-app-pub-4392518639765691/8758790366"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>