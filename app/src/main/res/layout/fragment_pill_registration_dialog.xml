<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="320dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@drawable/bg_dialog"
    android:gravity="center_horizontal"
    tools:context=".medicine_registration.RegistrationExitDialogFragment">

    <ImageView
        android:id="@+id/iv_warning"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginBottom="20dp"
        android:src="@drawable/ic_warning"
        android:contentDescription="경고 아이콘" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="약물 등록을 종료하시나요?"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:layout_marginBottom="8dp"
        android:gravity="center" />

    <TextView
        android:id="@+id/tv_message1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="지금 종료하면 입력하신 내용이 사라져요."
        android:textSize="14sp"
        android:textColor="@android:color/black"
        android:gravity="center" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="24dp">

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:text="종료"
            android:stateListAnimator="@null"
            android:textColor="@color/main_blue_1"
            android:background="@drawable/bg_btn_main_blue_2" />

        <Button
            android:id="@+id/btn_confirm"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="계속하기"
            android:stateListAnimator="@null"
            android:textColor="@color/white"
            android:background="@drawable/bg_btn_main_blue_1" />
    </LinearLayout>

</LinearLayout>