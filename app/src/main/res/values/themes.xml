<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.PillMateAndroid" parent="android:Theme.Material.Light.NoActionBar">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <style name="category_toggle">
        <item name="thumbTint">@color/white</item>
        <item name="track">@drawable/style_toggle_btn</item>
        <item name="android:thumb">@drawable/style_toggle_thumb</item>
        <item name="android:enabled">true</item>
    </style>

    <style name="Base.Theme.PillMateAndroid" parent="Theme.AppCompat.Light.NoActionBar"></style>

    <style name="RoundedBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/RoundBottomSheetStyle</item>
        <item name="android:windowIsTranslucent">true</item> <!-- 바텀시트 투명도 설정 -->
    </style>

    <style name="RoundBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/shape_bottom_sheet</item>
    </style>

    <style name="ButtonStyle1" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:background">@drawable/bg_select_button</item>
        <item name="android:textColor">@color/btn1_text_color</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/pretendard_semibold</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:outlineProvider">none</item>
    </style>

    <style name="DayButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">42dp</item>
        <item name="android:layout_height">42dp</item>
        <item name="android:layout_marginLeft">6dp</item>
        <item name="android:layout_marginRight">6dp</item>
        <item name="android:background">@drawable/bg_btn_day</item>
        <item name="android:textColor">@color/day_btn_text_color</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/pretendard_semibold</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:outlineProvider">none</item>
    </style>

    <style name="TagTextStyle" parent="TextAppearance.MaterialComponents.Chip">
        <item name="android:fontFamily">@font/pretendard_regular</item>
        <item name="android:textSize">12sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/main_blue_1</item>
    </style>

    <style name="HintTextStyle" parent="TextAppearance.AppCompat">
        <item name="android:includeFontPadding">false</item>
        <item name="fontFamily">@font/pretendard_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/gray_1</item>
    </style>

</resources>
