<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.PillMateAndroid" parent="android:Theme.Material.Light.NoActionBar">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>
    <style name="Base.Theme.PillMateAndroid" parent="Theme.AppCompat.Light.NoActionBar"></style>

    <style name="RoundedBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/RoundBottomSheetStyle</item>
        <item name="android:windowIsTranslucent">true</item> <!-- 바텀시트 투명도 설정 -->
    </style>

    <style name="RoundBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/shape_bottom_sheet</item>
    </style>

    <style name="ButtonStyle1" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:background">@drawable/bg_select_button</item>
        <item name="android:textColor">@color/btn1_text_color</item>
        <item name="android:textSize">16sp</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:outlineProvider">none</item>
    </style>

    <style name="DayButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_margin">6dp</item>
        <item name="android:background">@drawable/bg_btn_day</item>
        <item name="android:textColor">@color/day_btn_text_color</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:outlineProvider">none</item>
    </style>

    <style name="TagTextStyle" parent="TextAppearance.MaterialComponents.Chip">
        <!-- <item name="android:fontFamily">@font/pretendard</item>  Pretendard 폰트 적용 -->
        <item name="android:textSize">12sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/main_blue_1</item>
    </style>

</resources>
